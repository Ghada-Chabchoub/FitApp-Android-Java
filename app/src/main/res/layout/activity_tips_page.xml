<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343434"

    tools:context=".TipsPage">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="414dp"
        android:layout_height="231dp"
        android:layout_marginTop="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cons_removebg_preview" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="405dp"
        android:layout_height="672dp"
        android:layout_marginTop="4dp"

        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/edittext_background"
        android:textColor=" #ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="412dp"
        android:layout_height="64dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:text="-- Rappellez régulièrement l'importance de rester hydraté tout au long de la journée, en particulier pendant les séances d'entraînement. "
        android:textColor=" #ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="407dp"
        android:layout_height="52dp"

        android:text="-- Encouragez la respiration profonde et contrôlée pendant les exercices pour améliorer l'endurance et la concentration."

        android:textColor=" #ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:text="-- N'oubliez pas l'impact du sommeil sur la récupération musculaire et la performance globale.Réglez donc votre sommeil.
"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        android:textColor=" #ffffff"/>

</androidx.constraintlayout.widget.ConstraintLayout>